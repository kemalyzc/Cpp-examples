/*
// find the reverse of a number

int main()  {
    int number, reverse = 0, digit, tempNumber;

    cout << "Enter a number: ";
    cin >> number;
    tempNumber = number;

    while(tempNumber != 0)  {
        digit = tempNumber % 10;
        reverse = (reverse *10) + digit;
        tempNumber /= 10;
    }

    cout << "Number: " << number << "\n";
    cout << "Reverse of number: " << reverse << "\n";

    return 0;
}
